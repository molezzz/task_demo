<div class="well">
  <%= form_for(@todo, html: {class: 'form-horizontal'}) do |f| %>
  <fieldset>
    <% if @todo.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

        <ul>
        <% @todo.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :project_id, class: 'col-lg-2 control-label' %>
       <div class="col-lg-10">
       <%= collection_select(:todo, :project_id, Project.all, :id, :title, {}, class: 'form-control') %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :creator_id , class: 'col-lg-2 control-label'%>
      <div class="col-lg-10">
      <%= collection_select(:todo, :creator_id, User.all, :id, :name, {}, class: 'form-control') %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :owner_id, class: 'col-lg-2 control-label' %>
      <div class="col-lg-10">
      <%= collection_select(:todo, :owner_id, User.all, :id, :name, {}, class: 'form-control') %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :content, class: 'col-lg-2 control-label' %>
      <div class="col-lg-10">
      <%= f.text_area :content, class: 'form-control', rows: 5, cols: 10 %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :end_at, class: 'col-lg-2 control-label' %>
      <div class="col-lg-10">
      <%= f.datetime_select :end_at %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :complate_at , class: 'col-lg-2 control-label'%>
      <div class="col-lg-10">
      <%= f.datetime_select :complate_at %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
      <%= f.submit class: 'btn btn-primary' %>
      <%= f.button '重置', type:'reset', class: 'btn btn-default' %>
      </div>
    </div>
  <fieldset>
  <% end %>
</div><br/>
